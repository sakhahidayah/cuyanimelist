generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Collection {
  id              Int @id @default(autoincrement())
  anime_mal_id    String
  email_id        String
  anime_image     String?
  anime_title     String?
  anime_synopsis  String? @db.Text
  @@unique([anime_mal_id, email_id])
}

model Comment {
  id              Int @id @default(autoincrement())
  anime_mal_id    String
  email_id        String
  comment         String
  username        String
  anime_title     String
  rating          Int
}